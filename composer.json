{
    "name": "leovie/phpunit-crap-check",
    "license": [
        "MIT"
    ],
    "keywords": [
        "dev"
    ],
    "authors": [
        {
            "name": "Leo Viezens",
            "email": "leo.viezens@web.de"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.2",
        "symfony/css-selector": "^6.2",
        "symfony/dom-crawler": "^6.2",
        "thecodingmachine/safe": "^2.4"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.29",
        "infection/infection": "^0.26.19",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-phpunit": "^0.18.4",
        "symfony/var-dumper": "^6.2",
        "vimeo/psalm": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Leovie\\PhpunitCrapCheck\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leovie\\PhpunitCrapCheck\\Tests\\": "tests/"
        }
    },
    "bin": [
        "clover-crap-check"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "infection": "infection --threads=max --only-covered",
        "phpstan": "phpstan",
        "psalm": "psalm --no-progress --no-cache",
        "test": [
            "composer normalize --dry-run",
            "@phpstan",
            "@psalm",
            "@test:unit",
            "@infection",
            "@test:functional"
        ],
        "test:functional": "phpunit --testsuite=Functional --no-coverage",
        "test:unit": "XDEBUG_MODE=coverage phpunit --testsuite=Unit"
    }
}
